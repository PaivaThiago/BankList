<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="@dimen/margin_16dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bank_item_image"
            android:layout_width="@dimen/size_36dp"
            android:layout_height="@dimen/size_36dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bank_item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@drawable/ic_bank_placeholder"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bank_item_name"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bank_item_image"
            app:layout_constraintEnd_toStartOf="@+id/bank_item_arrow"
            app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bank_item_arrow"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bank_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>